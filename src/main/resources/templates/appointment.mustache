{{> header}}
<div class="appointment">
    <section>
        <header class="appointment-header">
            <h2 class="appointment-title"><a href="/appointment/{{appointment.id}}">Appointment id:{{appointment.id}}</a></h2>
            <div class="appointment-meta">Doctor:  <strong>{{appointment.doctor.name}} {{appointment.doctor.surname}}</strong> vs. Patient: <strong>{{appointment.patient.name}} {{appointment.patient.surname}}</strong></div>
        </header>
        <div class="appointment-place">
            Place: {{appointment.place}}<br />
            Appointment date and time: {{appointment.appointmentDate}}
        </div>
    </section>
    <hr />
    Edit: <br />
    <form method="post" action="/appointment/{{appointment.id}}">
        <label for="patient-id">Patient: </label>
        <select name="patient-id" >

                <option value="{{appointment.patient.id}}">{{appointment.patient.name}} {{appointment.patient.surname}}</option>>
            {{#patients}}
                <option value="{{id}}">{{name}} {{surname}}</option>
            {{/patients}}
        </select>
        <label for="doctor-id">Doctor: </label>
        <select name="doctor-id" >

                <option value="{{appointment.doctor.id}}">{{appointment.doctor.name}} {{appointment.doctor.surname}}: {{appointment.doctor.specialisation}}</option>>
            {{#doctors}}
                <option value="{{id}}">{{name}} {{surname}} : {{specialisation}}</option>
            {{/doctors}}
        </select>
        <label for="date"> Date: </label>
        <input name="date"  type="datetime-local" min="2019-09-25T08:00" value="{{appointment.appointmentDate}}" />
        <label for="place"> Place: </label>
        <input name="place" type="text" value="{{appointment.place}}" />
        <button type="submit" value="plan appointment">edit appointment</button>
    </form>
    <hr />
</div>
{{> footer}}